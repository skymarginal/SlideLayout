<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e51A1E30">

    <LinearLayout
        android:id="@+id/make_entrance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/make_video_icon"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="147dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/home_dialog_make_video"
                android:visibility="visible" />

            <TextView
                android:id="@+id/make_video_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="136dp"
                android:text="视频"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RelativeLayout>
        <!-- 66 -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/make_ring_icon"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="147dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/home_dialog_make_ring"
                android:visibility="gone" />

            <TextView
                android:id="@+id/make_ring_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="136dp"
                android:text="音乐"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="24dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>